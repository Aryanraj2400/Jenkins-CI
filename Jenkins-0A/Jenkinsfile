pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/your-username/your-repo.git'
            }
        }

        stage('Build') {
            steps {
                echo "No build needed for static HTML"
            }
        }

        stage('Test') {
            steps {
                echo "Running basic validation..."
                sh 'ls -l index.html'
                sh 'grep -q "<html" index.html'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying website..."
                // Copy to Jenkins workspace or deploy to web server
                sh '''
                mkdir -p /var/www/jenkins-tutorial
                cp index.html /var/www/jenkins-tutorial/
                '''
            }
        }
    }
}
